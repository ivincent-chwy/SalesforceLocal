    <formulas>
        <name>fSuggestedActivationDate</name>
        <dataType>Date</dataType>
        <expression>IF(ISBLANK({!Get_Opportunity.Account.ActivationDate__c}), 
TODAY() + CASE(MOD(TODAY() - DATE( 1900, 1, 7 ), 7 ), 
  0, 9, 
  1, 8,	
  2, 7,	
  3, 6, 
  4, 5, 
  5, 4, 
  6, 3, 
  0), 
{!Get_Opportunity.Account.ActivationDate__c})</expression>
    </formulas>
    <formulas>
        <name>fSuggestedGoLiveDate</name>
        <dataType>Date</dataType>
        <expression>IF(ISBLANK({!Get_Opportunity.Account.Go_Live_Date__c}), 
{!fSuggestedActivationDate} + 7, 
{!Get_Opportunity.Account.Go_Live_Date__c})</expression>
    </formulas>
